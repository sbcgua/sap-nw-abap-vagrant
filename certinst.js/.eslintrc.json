{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi":   ["error", "always", { "omitLastInOneLineBlock": true}],
    "no-console": "off",
    "indent": ["error", 4],
    "no-trailing-spaces": ["error"]
  }
}
